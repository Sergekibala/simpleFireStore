<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp"
    app:layout_goneMarginBaseline="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Title note"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvShowContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Content note" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="47dp"
            android:layout_height="38dp"
            app:srcCompat="@drawable/ic_baseline_border_color_24" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="47dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_baseline_panorama_vertical_select_24" />
    </LinearLayout>

</androidx.cardview.widget.CardView>